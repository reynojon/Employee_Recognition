extends layout

block content
	.header
		nav.site_header.sticky-top.py-1
			container.d-flex.flex-column.flex-md-row.justify-content-between.bg-dark			
				a.navbar-brand.col-sm-3.col-md-2.mr-0(href="/") LOGO
				a.navbar-nav.text-nowrap.nav-link(href="/") Sign Out

	container-fluid
		row
			nav.col-md-2.d-none.d-md-block.bg-light.sidebar
				sidebar-sticky
					nav.flex-column
					
						a.nav-link.active(href="/") Dashboard
					
						a.nav-link(href="/") Account
					
						a.nav-link(href="/") Update Password
					
						a.nav-link(href="/") Signature
					
						a.nav-link(href="/addAward") Create Award

						a.nav-link(href="/") Manage Award

		main.col-md-9.ml-sm-auto.col-lg-10.px-4
			d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
				h2 HI, #{name}!
				btn-toolbar.mb-2.mb-md-0
					btn-group.mr-2
						button.btn.btn-sm.btn-outline-secondary Share
						button.btn.btn-sm.btn-outline-secondary Export

