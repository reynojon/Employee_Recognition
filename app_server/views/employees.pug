extends layout

block content
	.container-fluid.p-0.m-0
		nav.navbar.mynavbar.sticky-top.px-2
			.container
				.d-none.d-md-block.py-2
					.d-flex.flex-row
						img.small_logo(src="/img/Logo.png")
						a.comp_name(href='/') Recognize
				.d-sm-flex.flex-sm-row.d-block.col.py-2.text-sm-left.text-center.pr-0
					.col.d-sm-flex.flex-sm-row.d-block.w-100.justify-content-start
						a.d-sm-flex.flex-sm-row.d-block.inactive-link(href='/') Home			
						a.d-sm-flex.flex-sm-row.d-block.active-link(href='/') FAQ
					.col.w-100
					.col.d-sm-flex.flex-sm-row.d-block.w-100.text-sm-left.text-center.justify-content-end.pr-0
						a.d-sm-flex.flex-sm-row.d-block.active-link(href='/') Sign Out
						a.d-sm-flex.flex-sm-row.d-block.active-link(href='/adminLogin') Login as Admin?

		container-fluid
			row.col-md-2.d-none.d-md-block.bg-light.sidebar
				sidebar-sticky.nav.flex-column
					nav-item
						a.nav-link.active(href="/mainMenuAdmin") Dashboard
					nav-item
						a.nav-link(href="/addEmployee") Add user
					nav-item
						a.nav-link(href="/employees") Manage User
					nav-item
						a.nav-link(href="/addAdmin") Add admin
					nav-item
						a.nav-link(href="/admins") Manage admin
					nav-item
						a.nav-link(href="/") Business analysis

			main.col-md-9.ml-sm-auto.col-lg-10.px-4
				h1 Employee List
				table.table-responsive.table-hover
					captain
					thead-light
					tr.table-primary
						th.col-sm-4 First Name
						th.col-sm-3 Last Name
						th.col-sm-3 Email
						th.col-sm-3 Created Time
						th.col-sm-2 Delete
						th.col-sm-2 Update
					.tbody
					for d in employees
						tr
							td.col-sm-4= d.first
							td.col-sm-3= d.last
							td.col-sm-3= d.email
							td.col-sm-3= d.date
							td.col <a href=deleteEmployee?id=#{d.id}>Delete
							td.col <a href=updateEmployee?id=#{d.id}>Update